                android:textSize="18dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/thirdmatchTimecalendar"
                android:layout_width="70dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="15dip"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/thirdmatchStadiumcalendar"
                android:layout_width="70dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="15dip"
                android:textSize="15dip" />
        </LinearLayout>

        <Button
            android:id="@+id/thirdmatchbutton"
            android:layout_width="75dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="문자중계"
            android:textSize="13dip" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="210dip"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/fourthhometeamnamecalendar"
                android:layout_width="90dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/fourthcolon"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/fourthhometeamnamecalendar"
                android:gravity="center"
                android:text="VS"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/fourthawayteamnamecalendar"
