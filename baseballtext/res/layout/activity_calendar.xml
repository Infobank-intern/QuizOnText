                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"  />

            <TextView
                android:id="@+id/fourthmatchStadiumcalendar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dip"
                android:layout_weight="1"
