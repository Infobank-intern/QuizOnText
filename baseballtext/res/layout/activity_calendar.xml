<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:showWeekNumber="false"
        android:weekSeparatorLineColor="#ffff00"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/firsthometeamnamecalendar"
                android:layout_width="90dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="25sp"  />

            <TextView
                android:id="@+id/firstcolon"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/firsthometeamnamecalendar"
                android:gravity="center"
                android:text="VS"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/firstawayteamnamecalendar"
                android:layout_width="90dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/firstcolon"
                android:gravity="center"
                android:textSize="25sp"  />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/firstmatchTimecalendar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"  />

            <TextView
                android:id="@+id/firstmatchStadiumcalendar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15sp"  />
        </LinearLayout>

        <Button
            android:id="@+id/firstmatchbutton"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="문자중계"
            android:textSize="17sp" >
        </Button>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >
        
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/secondhometeamnamecalendar"
                android:layout_width="90dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="25sp"  />

            <TextView
                android:id="@+id/secondcolon"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/secondhometeamnamecalendar"
                android:gravity="center"
                android:text="VS"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/secondawayteamnamecalendar"
                android:layout_width="90dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/secondcolon"
                android:gravity="center"
                android:textSize="25sp"  />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/secondmatchTimecalendar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"  />

            <TextView
                android:id="@+id/secondmatchStadiumcalendar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15sp"  />
        </LinearLayout>

        <Button
            android:id="@+id/secondmatchbutton"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="문자중계"
            android:textSize="17sp" >
        </Button>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >
               
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/thirdhometeamnamecalendar"
