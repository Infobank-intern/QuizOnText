<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:weekSeparatorLineColor="#ffff00"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/hometeamnamecalendar"
                android:layout_width="80dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="abc" />

            <TextView
                android:id="@+id/hometeampointcalendar"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/hometeamnamecalendar"
                android:gravity="center"
                android:text="abc" />

            <TextView
                android:id="@+id/colon"
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/hometeampointcalendar"
                android:gravity="center"
                android:text=":" />

            <TextView
                android:id="@+id/awayteampointcalendar"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/colon"
                android:gravity="center"
                android:text="abc" />

            <TextView
                android:id="@+id/awayteamnamecalendar"
                android:layout_width="80dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/awayteampointcalendar"
                android:gravity="center"
                android:text="abc" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="abc" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="abc" />
        </LinearLayout>

        <Button
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="문자중계"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>